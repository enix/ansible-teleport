{{ ansible_managed | comment }}
---

version: v2
teleport:
  nodename: {{ teleport__nodename }}

{% if teleport__proxy %}
  data_dir: /var/lib/teleport
  log:
    output: stderr
    severity: INFO
    format:
      output: text
  ca_pin: []
  diag_addr: ""
{%endif%}

{% if teleport__node %}
## remote proxy
  auth_token: "{{ teleport__node_token }}"
  auth_servers:
  - "{{ teleport__node_server }}"
{%endif%}

auth_service:
{% if teleport__auth %}
  enabled: "yes"
  listen_addr: {{ teleport__auth_addr }}:{{ teleport__auth_port }}
  cluster_name: {{ teleport__auth_cluster_name }}
  proxy_listener_mode: multiplex
{%else%}
  enabled: "false"
{%endif%}

ssh_service:
{% if teleport__ssh %}
  enabled: "yes"
  listen_addr: {{ teleport__ssh_addr }}:{{ teleport__ssh_port }}
{% if teleport__ssh_labels is defined %}
  labels:
{% for label_id, value in teleport__ssh_labels.items() %}
    {{ label_id }}: {{ value }}
{% endfor %}
{% endif %}
  commands:
  - name: hostname
    command: [hostname]
    period: 1m0s
{%else%}
  enabled: "false"
{%endif%}

proxy_service:
{% if teleport__proxy %}
  enabled: "yes"
  web_listen_addr: {{ teleport__web_addr }}:{{ teleport__web_port }}
  public_addr: {{ teleport__proxy_public_addr }}
  tunnel_listen_addr: {{ teleport__tunnel_addr }}:{{ teleport__tunnel_port }}
  https_keypairs: []
{% if teleport__proxy_acme %}
  acme:
    enabled: "yes"
    email: {{ teleport__proxy_acme_email }}
{% endif %}
{%else%}
  enabled: "false"
{%endif%}

